<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sample Site</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
   <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
</head>
    <body>
        <nav class="navbar navbar-default" style="background-color: #2b3f40;"><h1 style=" align-self: center; color: aliceblue; margin: 30;" >User Authentication Example:</h1></nav>
                <div id="registerbox" style=" margin-top:-10px" class="mainbox  col-md-6  col-sm-8 col-sm">                                  
                        <div class="panel panel-info">
                            <div class="panel-heading" style="background-color: #2b3f40;">
                                <div class="panel-title" style="color: aliceblue;">Register: </div>
                                <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="loginLink" href="/">Log In</a></div>
                            </div> 
                            <div class="panel-body" >
                                <form class="form-horizontal" role="form" method="post" action="/register" onSubmit="return checkblank(this);">
                                    <% if (message.length > 0) { %>
                                        <div class="alert alert-success col-sm-12"><%= message %></div>
                                    <% } %>
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                <p>Error:</p>
                                <span></span>
                                </div>
                                <div class="form-group">
                                    <label for="first_name" class="col-md-3 control-label">First Name</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="first_name" placeholder="First Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="last_name" class="col-md-3 control-label">Last Name</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="last_name" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="user_name" class="col-md-3 control-label">User Name</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="user_name" placeholder="User Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="job" class="col-md-3 control-label">Job Position</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="job" placeholder="Job Title">
                                    </div>
                                </div>   
                                <div class="form-group">
                                    <label for="country" class="col-md-3 control-label">Your Country</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="country" placeholder="Country">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="col-md-3 control-label"> Email Address</label>
                                    <div class="col-md-9">
                                        <input type="email" class="form-control" name="email" placeholder=" Email Address">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="image" class="col-md-3 control-label">Photo Url</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="image" placeholder="Photo Url">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">Password</label>
                                    <div class="col-md-9">
                                        <input type="password" class="form-control" name="password" placeholder="Password">
                                    </div>
                                </div>
    
                                <div class="form-group">
                                    <!-- Button -->                                       
                                    <div class="col-md-offset-3 col-md-9">
                                        <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> Register</button>
                                        
                                    </div>
                              </div>  
                         </form>
                      </div>
                </div>  
            </div>
        </div>
    </body>
</html>
 
