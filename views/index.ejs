<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sample Site</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
    <link href="../public/stylesheets/style.css"/>
</head>
<body id="clrblk">
            <nav class="navbar navbar-default" style="background-color: #2b3f40;"><h1 style=" align-self: center; color: aliceblue; margin: 30;" >User Authentication Example:</h1></nav>
        <div id="loginbox" style="margin-top:-10px; " class="mainbox col-md-6  col-sm-8 col-sm">                   
            <div class="panel panel-info" >
                    <div class="panel-heading" style="background-color: #2b3f40;" >
                        <div class="panel-title" style="color: aliceblue;">Log In</div>
                        <!--<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>-->
                    </div>    
 
                    <div style="padding-top:30px" class="panel-body" >
                       <% if (message.length > 0) { %>
                          <div class="alert alert-danger col-sm-12"><%= message %></div>
                         <% } %>
                           
                        <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">
                                   
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="username">                                       
                                    </div>
                               
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                                    </div>
                
                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->
 
                                    <div class="col-sm-12 controls">
                                      <button id="btn-login" type="submit" class="btn btn-success">Login<i class=" glyphicon glyphicon-hand-up"></i></button>
                                     
 
                                    </div>
                                </div>
 
 
                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid #2b3f40; padding-top:15px; font-size:85%" >
                                            Don't have an account!
                                        <a href="./register">
                                            Register Now
                                        </a>
                                        </div>
                                    </div>
                                </div>   
                            </form>   

                        </div>                    
                    </div> 
        </div>
</body>
</html>
